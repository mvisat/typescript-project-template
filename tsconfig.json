{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "types": [
        "node",
        "jest"
      ],
      "rootDir": "src",
      "outDir": "dist",
      "declaration": true,
      "removeComments": true,
      "strict": true,
      "noUnusedLocals": true,
      "noImplicitReturns": true
    },
    "include": [
        "src"
    ],
    "exclude": [
      "**/__tests__/*"
    ]
  }
